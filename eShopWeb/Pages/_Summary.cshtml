@using DataLayer.Entities
@model Produkt

<div class="col-sm-3">
    <div class="card my-3">
        @if (@Model.ProduktFoto.Select(c => c.FotoUrl).Count() >= 1)
        {
            <img class="card-img-top" src="@Model.ProduktFoto.Select(c=>c.FotoUrl).First() ">
        }
        else
        {
            <img class="card-img-top" src="https://cdn.vanderbilt.edu/vu-wp0/wp-content/uploads/sites/181/2019/09/09091628/Image-Coming-Soon.png"> 
        }
    <div class="card-body">
        <h5 class="card-title">@Model.ProduktNavn </h5>
        <p class="card-text">@Model.Pris </p>
        
    </div>
        <div class="card-footer text-muted">
            <a asp-page="./DetailProdukt" asp-route-ProduktId="@Model.ProduktId">
                <p class="card-text">Læs mere </p>
            </a>
        </div>
    </div>
</div>